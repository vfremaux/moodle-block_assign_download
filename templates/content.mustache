{{!
    @template block-assign_download/content

    Block template downloading submissions facility

    Classes required for JS:
    * none

    Context variables required for this template:
    * submissions Array of new submissions to retrieve
}}
{{#notassigned}}
{{{notassignedlbl}}}
{{/notassigned}}
{{^notassigned}}
<div class="assign-instance">{{{assignlbl}}}</div>
{{#nosubmissions}}
{{{nosubmissionslbl}}}
{{/nosubmissions}}
{{^nosubmissions}}
<div class="assign-download-links">
    {{#hasnew}}
    <div class="linktonew">
    <a href="{{{getnewurl}}}"><b>{{getnewlbl}}</b></a>
    </div>
    {{/hasnew}}
    {{#hasold}}
    <div class="linktoall">
    <a href="{{{getallurl}}}">{{getalllbl}}</a>
    </div>
    {{/hasold}}
    <div class="lastvisit">
    {{{lastvisit}}}
    </div>
</div>
{{/nosubmissions}}
{{/notassigned}}